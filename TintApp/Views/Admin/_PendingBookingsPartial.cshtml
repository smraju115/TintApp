@model IEnumerable<TintApp.Models.Booking>

@{
}

<input class="form-control mb-3 search-box" placeholder="Search pending bookings..." />

<table class="table table-bordered">
    <thead class="table-warning">
        <tr>
            <th>Customer</th>
            <th>Service</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.CustomerName</td>
                <td>@booking.ServiceItem.ItemName</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td><span class="badge bg-warning text-dark">@booking.Status</span></td>
                <td>
                    <button class="btn btn-success btn-sm mark-done" data-id="@booking.Id">
                        Mark as Done
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
