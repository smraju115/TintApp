@model TintApp.Models.ServiceItem

@{
    ViewData["Title"] = "Create";
    ViewBag.PagePaddingClass = "p-5 m-5";
}

<div class="text-center">
    <h4 class="display-6 text-primary fw-bold border-bottom pb-2 d-inline-block"> Create Service Item</h4>
</div>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="ServiceCategoryId" value="@ViewBag.CategoryId" />
            <div class="mb-2">
                <label asp-for="ItemName"></label>
                <input asp-for="ItemName" class="form-control" />
            </div>
            <div class="mb-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="mb-2">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="mb-2">
                <label>Upload Multiple Images</label>
                <input type="file" name="PictureFiles" multiple class="form-control" />
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="ServiceCategory" class="btn btn-info">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
