            const itemDropdown = document.getElementById('ItemId');
            itemDropdown.innerHTML = '<option selected disabled>-- Select Item --</option>';

            const matchedItems = allItems.filter(item => item.serviceCategoryId === parseInt(categoryId));

            matchedItems.forEach(item => {
                const option = document.createElement('option');
